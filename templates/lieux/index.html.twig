    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieux in lieuxes %}
            <tr>
                <td>{{ lieux.id }}</td>
                <td>{{ lieux.nom }}</td>
                <td>
                    <a href="{{ path('app_lieux_show', {'id': lieux.id}) }}">show</a>
